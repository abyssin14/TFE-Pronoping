{% extends 'base.html.twig' %}

 {% block title %} Se connecter {% endblock %}

 {% block body %}

<div class="loginContainer">
    <img src='/build/images/PronopingLogo.c46909c6.png' class='LogoPronoping'/>
    <form action="{{ path('login') }}" method="post" class="formContainer">
      {% if error %}
          <div class="alert alert-danger">
              Nom d'utilisateur ou mot de passe incorrect.
          </div>
      {% endif %}
        <div class="form-group inputLogin">
            <label for="username">Nom d'utilisateur</label>
            <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}">
        </div>
        <div class="form-group inputLogin">
            <label for="password">Mot de passe</label>
            <input type="password" id="password" name="_password" class="form-control">
        </div>
        <div class='buttonsContainer'>
          <button type="submit" class="btn">Se connecter</button>
          <a href='/register' class="btn btnRegister">S'inscrire</a>
        <div>
    </form>
</div>
 {% endblock %}
